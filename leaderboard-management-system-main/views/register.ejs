<head>
    <link rel="stylesheet" href="styles.css">
    <title>Register</title>
</head>
<body>
<section class="reg-ctn">
    <div class="reg">
        <h1>Register</h1>
        <form action="/register" method="post">
                    <div>
                        <label for="name" class="text-slate-800">Enter a Username:</label>
                        <input type="text" id="name" name="username" required class="rounded mb-5 mt-4 mr-9" required>
                    </div>
                    <br>
                    <div>
                        <label for="name" class="text-slate-800">Enter your Email Address:</label>
                        <input type="text" id="name" name="email" required class="rounded mb-5 mt-4 mr-9" required>
                    </div>
                    <br>
                    <div>
                        <label for="password" class="text-slate-800">Create a Password:</label>
                        <input type="password" id="password" name="password" class="rounded mr-7" required>
                    </div>
                    </div>
                    <button><a href="/login">Back to Login</a></button>
                    <button type="submit">Register</button>
        </form>
    </div>
</section>
</body>